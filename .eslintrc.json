{
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "jsx": true,
    "useJSXTextNode": true
  },
  "extends": [
    "@cruk"
  ],
  "ignorePatterns": [
    "cypress",
    "*.config.js",
    "webpack.*.js",
    "node_modules"
  ],
  "env": {
    "browser": true,
    "node": true
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}