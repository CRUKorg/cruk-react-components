{
  "compilerOptions": {
    "strict": true,
    "declaration": true,
    "declarationDir": "./lib",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "lib": [
      "dom",
      "es2015",
      "es2016"
    ],
    "jsx": "react",
    "target": "es5",
    "module": "es6",
    "baseUrl": "./",
    "allowJs": false, //Only TS and TSX will be compiled.
    "noImplicitAny": true, // Setting to true means if no type given it will not automatically assign ANY.
    "noUnusedLocals": true,
    "allowSyntheticDefaultImports": true, // This is needed for the React components.
    "noErrorTruncation": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "./node_modules/*",
    "lib",
    "typings"
  ],
}